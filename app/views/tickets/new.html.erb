<div class="form-container">
  <h1>Create Ticket</h1>

  <%= form_with model: @ticket, class: "ticket-form" do |f| %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, placeholder: "Enter ticket title" %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description,
            rows: 4,
            placeholder: "Describe the issue..." %>
    </div>

    <div class="form-group">
      <%= f.label :category %>
      <%= f.text_field :category, placeholder: "Hardware / Software / Network" %>
    </div>

    <div class="form-group">
      <%= f.label :priority %>
      <%= f.select :priority,
            Ticket::PRIORITIES,
            prompt: "Select priority" %>
    </div>

    <div class="form-actions">
      <%= f.submit "Create Ticket", class: "btn primary" %>
      <%= link_to "Back", tickets_path, class: "btn link" %>
    </div>

  <% end %>
</div>
